---
interface Props {
  title: string;
}
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getLangFromUrl } from '../i18n/util.js';
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url.pathname);
---

<html lang={lang} transition:animate="fade">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/code.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="soy Daniel Pamblanco Mestre, desarrollador de Software Junior y Administrador de Sistemas informáticos en red.
    Soy una persona autodidacta con una gran pasión por el aprendizaje continuo. 
    Desde muy pequeño, la tecnología y los videojuegos han sido una parte fundamental de mi vida. 
    Actualmente, estoy enfocado en contribuir al desarrollo de herramientas tecnológicas que siempre me han fascinado desde mi infancia."
    />
    <meta name="author" content="DanibreaddDev" />
    <meta
      name="keywords"
      content="Portfolio, Junior, Desarrollador, Sistemas"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="min-h-screen scroll-smooth">
    <main class="relative min-h-screen flex flex-col p-5 items-center">
      <Header />
      <div class="flex justify-center items-center mt-20">
        <div class="relative inline-block w-20 h-10">
          <input type="checkbox" id="toggle" class="hidden peer" />
          <label
            for="toggle"
            class="flex justify-between items-center cursor-pointer w-full h-full bg-gray-300 rounded-full p-1 transition duration-500 peer-checked:bg-blue-500"
          >
            <span class="w-8 h-8 bg-white rounded-full shadow-md flex justify-center items-center transition duration-500 transform peer-checked:translate-x-full">
              <img src="https://img.icons8.com/emoji/48/000000/globe-emoji.png" alt="ES" class="w-6 h-6" />
            </span>
            <img src="https://img.icons8.com/color/48/000000/great-britain.png" alt="EN" class="w-6 h-6 opacity-0 peer-checked:opacity-100 transition duration-500 transform -translate-x-2 peer-checked:translate-x-2" />
            <img src="https://img.icons8.com/emoji/48/000000/spain.png" alt="ES" class="w-6 h-6 opacity-100 peer-checked:opacity-0 transition duration-500 transform translate-x-2 peer-checked:-translate-x-2" />
          </label>
        </div>
      </div>
      

      <slot />
      <Footer />
    </main>
  </body>
</html>
