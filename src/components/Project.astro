---
const { title, urlGit, description, urlDemo, technologies } = Astro.props;
import SvgIcon from "./icons/SvgIcon.astro";

import ArrowIcon from "./icons/Arrow.astro";
---

<div
    class="mt-10 group block sm:w-full w-auto mx-5 p-5 space-y-3 ring-1 ring-gray-900 dark:ring-gray-100 hover:scale-105 rounded-lg hover:shadow-xl transition-shadow duration-100 dark:hover:shadow-md dark:hover:shadow-gray-500"
>
    <div class="flex items-center space-x-5">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="white"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-layout w-8 h-8 transition-transform duration-300 group-hover:scale-125 stroke-black dark:stroke-white"
            ><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line
                x1="3"
                y1="9"
                x2="21"
                y2="9"></line><line x1="9" y1="21" x2="9" y2="9"></line></svg
        >

        <h3
            class="text-slate-900 group-hover:text-black text-sm font-semibold dark:text-gray-300 dark:group-hover:text-white"
        >
            {title}
        </h3>
    </div>
    <p
        class="text-slate-500 group-hover:text-gray-500 text-sm text-wrap dark:text-gray-200"
    >
        {description}
    </p>
    <div class="flex justify-start gap-2 items-center">
        {technologies.map((tech) => (<SvgIcon svgIcon={tech}/>))}
    </div>
    <div class="flex justify-end gap-5items-center">
        <div class="flex items-center">
            {urlGit && (
                <>
                    <a href={urlGit} class="hover:translate-x-2 hover:transition duration-200 dark:text-gray-300">Github</a>
                    <ArrowIcon />
                </>
            )}
        </div>
        <div class="flex items-center">
            {urlDemo && (
                <>
                    <a class="hover:translate-x-2 hover:transition duration-200 dark:text-gray-300" href={urlDemo}>Live demo</a>
                    <ArrowIcon />
                </>
            )}
        </div>
    </div>
</div>
