---
const { url, title, urlGit, description, urlDemo, technologies } = Astro.props;
---

<div
    class="p-4 space-y-3 ring-1 ring-gray-300 dark:ring-neutral-700 rounded-lg hover:shadow-md transition-shadow duration-500  dark:hover:shadow-neutral-300 hover:shadow-neutral-400"
>
    <div class="flex flex-wrap w-full items-center justify-between">
        <div class="flex group items-center space-x-[5px]">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="white"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="feather feather-layout w-8 h-8 transition-transform duration-300 group-hover:scale-110 stroke-black dark:stroke-white"
                ><rect x="3" y="3" width="18" height="18" rx="2" ry="2"
                ></rect><line x1="3" y1="9" x2="21" y2="9"></line><line
                    x1="9"
                    y1="21"
                    x2="9"
                    y2="9"></line></svg
            >
            <a
                class="group text-neutral-700 text-sm font-semibold dark:text-neutral-100 decoration-dashed underline-offset-[5px] hover:underline"
                href={url}
            >
                {title}
            </a>
            <svg
                width="13"
                height="13"
                stroke="currentColor"
                stroke-width="2"
                class="lucide-icon lucide lucide-arrow-up-right opacity-50 duration-200 group-hover:translate-x-[1.5px] group-hover:opacity-100 font-semibold stroke-neutral-700 dark:stroke-neutral-100"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M7 7h10v10"></path><path d="M7 17 17 7"></path></svg
            >
        </div>
        {
            urlGit && (
                <>
                    <a href={urlGit}>
                        <svg
                            class="size-5 dark:fill-white hover:transition duration-100 hover:scale-110"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            aria-hidden="true"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                                clip-rule="evenodd"
                            />
                        </svg>
                    </a>
                </>
            )
        }
    </div>

    <p
        class="text-neutral-600 text-sm dark:text-neutral-300"
    >
        {description}
    </p>
    <div class="flex flex-wrap justify-start gap-2 items-center">
        {technologies.map((tech) => (
            <p class="text-sm px-2 py-1 rounded-md border-neutral-500 bg-neutral-200/50 text-neutral-700 dark:border-neutral-800 dark:bg-neutral-800/60 dark:text-neutral-300">{tech}</p>
        ))}
    </div>
</div>
