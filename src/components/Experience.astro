---
interface Props {
    idioma: string
}
import Company from "./Company.astro";
import redi from "../assets/logoredi.svg";
import datium from "../assets/datium.png";
import php from "../assets/php.svg";
import javascript from "../assets/javascript.svg";
import bootstrap from "../assets/bootstrap.svg";
import jquery from "../assets/jquery.svg";
import workbench from "../assets/worbenchsql.svg";
import html from "../assets/html.svg";
import css from "../assets/css.svg";
import bash from "../assets/bash.svg";
import speedtest from "../assets/speedtest.svg";
const companies = {
  es: [
    {
      company: "Datium",
      description: "Resolución de incidencias y administración de la base de datos del portal web. Desarrollo de herramienta de gestión de stock para mejorar el seguimiento de inventarios, permitiendo la edición y la inserción de nuevos dispositivos.",
      img: datium.src,
      date: "2024 - 4 Meses",
      technologies: [php.src, javascript.src, bootstrap.src, jquery.src, workbench.src],
    },
    {
      company: "Redi for You",
      description: "Desarrollé una herramienta con Speedtest CLI para monitorear la velocidad de Internet. Implementé un script que detecta caídas de velocidad y envía alertas por correo electrónico. También creé una web para visualizar y filtrar los registros, mejorando la supervisión.",
      img: redi.src,
      date: "2021 - 4 Meses",
      technologies: [php.src, html.src, css.src, bash.src, speedtest.src],
    },
  ],
  en: [
    {
      company: "Datium",
      description: "Resolving incidents and managing the web portal database. Developed a stock management tool to improve inventory tracking and allow editing and insertion of new devices.",
      img: datium.src,
      date: "2024 - 4 Months",
      technologies: [php.src, javascript.src, bootstrap.src, jquery.src, workbench.src],
    },
    {
      company: "Redi for You",
      description: "Developed a tool using Speedtest CLI to monitor internet speed. I implemented a script that detects speed drops and sends alerts by email. I also created a web page to visualise and filter the logs, improving the monitoring.",
      img: redi.src,
      date: "2021 - 4 Months",
      technologies: [php.src, html.src, css.src, bash.src, speedtest.src],
    },
  ],
};

const { idioma } = Astro.props;
---
<ol class="relative border-s border-gray-200 dark:border-gray-700">
    {companies[idioma].map((company) => (
        <Company
          company={company.company}
          description={company.description}
          img={company.img}
          date={company.date}
          technologies={company.technologies}
        />
      ))}

</ol>

