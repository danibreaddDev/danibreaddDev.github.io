---
import Presentation from "../components/about/Presentation.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Project from "../components/Project.astro";
import About from "../components/About.astro";
import Tools from "../components/Technologies.astro";
import Experience from "../components/Experience.astro";
import ThemeIcon from "../components/ThemeIcon.astro";
const pageTitle = "Portfolio Daniel";
const allProjects = await Astro.glob("../pages/projects/*.md");
---

<BaseLayout title={pageTitle}>
    <div class="container max-w-4xl">
        <div class="grid items-center py-4">
    <Presentation />
            
                    <section class="flex flex-col">
                        <div class="flex items-center mt-20">
                            <h3
                                class="text-center dark:text-white lg:text-center font-bold text-3xl "
                            >
                                Proyectos
                            </h3>
                        </div>
                        <div
                            class="grid grid-cols-1 sm:grid sm:grid-cols-2 gap-5"
                        >
                            {
                                allProjects.map((project) => (
                                    <Project
                                        url={project.url}
                                        urlGit={project.frontmatter.urlGit}
                                        urlDemo={project.frontmatter.urlDemo}
                                        title={project.frontmatter.title}
                                        description={
                                            project.frontmatter.description
                                        }
                                        technologies={
                                            project.frontmatter.technologies
                                        }
                                    />
                                ))
                            }
                        </div>
                    </section>

                    <section class="flex flex-col gap-5">
                        <h3
                            class=" dark:text-white font-bold text-3xl mt-20"
                        >
                            Experiencia
                        </h3>
                        <Experience />
                    </section>
                </div>
            </div>
</BaseLayout>
